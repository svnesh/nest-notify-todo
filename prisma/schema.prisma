generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  userId    Int       @default(autoincrement()) @id
  email String        @unique
  password String
  name  String?  
  todos Todo[]
  receivers Notification[]  @relation("Receiver")
  sender  Notification[]  @relation("Actor")
  createdAt DateTime  @default(now()) @db.Timestamptz(3)
  deletedAt DateTime? @db.Timestamptz(3)
  updatedAt DateTime  @updatedAt @db.Timestamptz(3)
}

model Todo {
  todoId Int          @default(autoincrement()) @id
  title String
  description String?
  completed Boolean   @default(false)
  owner User?         @relation(fields: [ownerId], references: [userId])
  ownerId Int?
  notifications Notification[]
  createdAt DateTime  @default(now()) @db.Timestamptz(3)
  deletedAt DateTime? @db.Timestamptz(3)
  updatedAt DateTime  @updatedAt @db.Timestamptz(3)
}

model Notification {
  notificationId  Int  @default(autoincrement()) @id
  actor User         @relation("Actor", fields: [actorId], references: [userId])
  actorId Int
  toUser User         @relation("Receiver", fields: [toUserId], references: [userId])
  toUserId  Int
  entityType  String
  entity  Todo        @relation(fields: [entityId], references: [todoId])
  entityId  Int
  metaInfo  Json
  event  String
  isRead  Boolean     @default(false)
  createdAt DateTime  @default(now()) @db.Timestamptz(3)
  deletedAt DateTime? @db.Timestamptz(3)
  updatedAt DateTime?  @db.Timestamptz(3)

  @@unique([event, entityId, entityType, toUserId])
}